<h1>Current Schedule</h1>

<table>
  <thead>
    <tr>
      <th>Date/Time</th>
      <th>Team 1</th>
      <th>Team 2</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.datetime.strftime('%m/%d/%y - %I:%M') %></td>
        <td><%= link_to game.home_team.name, team_path(game.home_team.id) %></td>
        <td><%= link_to game.away_team.name, team_path(game.away_team.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Teams</h1>
<ul>
  <% @teams.each do |team| %>
    <li><%= team.name %></li>
  <% end %>
</ul>
